<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="3dp"
    android:paddingBottom="4dp"
    android:paddingStart="7dp"
    android:paddingEnd="7dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/m_item_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:adjustViewBounds="true"/>
        <TextView
            android:id="@+id/m_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="@string/textDefault"
            android:textColor="@color/white"
            android:singleLine="true"
            android:scrollHorizontally="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingStart="7dp"/>
        <TextView
            android:id="@+id/m_item_remain_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="@string/textDefault"
            android:paddingStart="7dp"
            android:textColor="@color/white"
            android:singleLine="true"
            android:scrollHorizontally="true"
            android:marqueeRepeatLimit="marquee_forever"/>

    </LinearLayout>

    <TextView
        android:id="@+id/m_item_y_day_avg_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/textDefault"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/m_item_recent_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/textDefault"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/m_item_current_min_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/textDefault"
        android:textColor="@color/white" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/textColor"
        android:layout_marginTop="4dp"/>

</LinearLayout>