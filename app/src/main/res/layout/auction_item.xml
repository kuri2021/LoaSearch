<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="3dp"
    android:paddingBottom="4dp"
    android:paddingStart="7dp"
    android:paddingEnd="7dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="7dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/a_item_icon_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3">
            <ImageView
                android:id="@+id/a_item_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/a_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="@string/textDefault"
            android:textColor="@color/white"
            android:singleLine="true"
            android:scrollHorizontally="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingStart="7dp"/>
        <TextView
            android:id="@+id/a_item_remain_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="@string/textDefault"
            android:paddingStart="7dp"
            android:textColor="@color/white"
            android:singleLine="true"
            android:scrollHorizontally="true"
            android:marqueeRepeatLimit="marquee_forever"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/a_item_stat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="vertical">
            <TextView
                android:id="@+id/a_item_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/textDefault"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/a_item_quality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/textDefault"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/a_item_time_remaining"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/textDefault"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/a_item_minimum_bid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/textDefault"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/a_item_buy_now"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/textDefault"
                android:textColor="@color/white" />
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/textColor"
        android:layout_marginTop="4dp"/>

</LinearLayout>