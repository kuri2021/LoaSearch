<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_back"
    android:padding="7dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="14dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="아이템 명"
            android:textSize="19sp"
            android:layout_weight="3"/>
        <EditText
            android:id="@+id/item_name_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="7dp"
            android:paddingEnd="4dp"
            android:layout_weight="8"
            android:textSize="19sp"
            android:background="@drawable/st_1dp_ffffff_co_4dp"
            android:autofillHints="아이템 명" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="7dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="직업"
            android:textSize="19sp"
            android:layout_weight="3"/>
        <Spinner
            android:id="@+id/class_sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="7dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="19sp"
            android:text="카테고리 명" />
        <Spinner
            android:id="@+id/category_sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="7dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="아이템 티어"
            android:textSize="19sp"
            android:layout_weight="3"/>
        <Spinner
            android:id="@+id/tier_sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="7dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="아이템 등급"
            android:textSize="19sp"
            android:layout_weight="3"/>
        <Spinner
            android:id="@+id/grade_sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8" />
    </LinearLayout>

    <Button
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="검색"
        android:textSize="19sp"
        android:layout_marginTop="7dp"/>

</LinearLayout>