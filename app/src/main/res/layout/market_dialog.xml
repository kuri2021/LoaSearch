<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_back"
    android:padding="7dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="14dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="아이템 명"
            android:textSize="19sp"
            android:layout_weight="3"/>
        <EditText
            android:id="@+id/market_item_name_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="7dp"
            android:paddingEnd="4dp"
            android:layout_weight="8"
            android:textSize="19sp"
            android:paddingTop="3dp"
            android:paddingBottom="4dp"
            android:textColor="@color/white"
            android:background="@drawable/st_1dp_ffffff_co_4dp"
            android:autofillHints="아이템 명" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="7dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="직업"
            android:textSize="19sp"
            android:layout_weight="3"/>
        <Spinner
            android:id="@+id/market_class_sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:background="@drawable/st_1dp_ffffff_co_4dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="7dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="19sp"
            android:text="카테고리1" />
        <Spinner
            android:id="@+id/market_category1_sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:background="@drawable/st_1dp_ffffff_co_4dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/market_category2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="7dp"
        android:visibility="gone">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="19sp"
            android:text="카테고리2" />
        <Spinner
            android:id="@+id/market_category2_sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:background="@drawable/st_1dp_ffffff_co_4dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="7dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="아이템 티어"
            android:textSize="19sp"
            android:layout_weight="3"/>
        <Spinner
            android:id="@+id/market_tier_sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:background="@drawable/st_1dp_ffffff_co_4dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="7dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="아이템 등급"
            android:textSize="19sp"
            android:layout_weight="3"/>
        <Spinner
            android:id="@+id/market_grade_sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:background="@drawable/st_1dp_ffffff_co_4dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/market_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="검색"
        android:textSize="19sp"
        android:background="@drawable/result_back"
        android:layout_marginTop="21dp"/>

</LinearLayout>